{
    "info": {
        "_postman_id": "order-service-api",
        "name": "Order Service API",
        "description": "Postman collection for the Event-Driven Order Processing System - Order Service API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"customerId\": \"CUST001\",\n  \"items\": [\n    {\n      \"productId\": \"PROD001\",\n      \"quantity\": 2,\n      \"price\": 29.99\n    },\n    {\n      \"productId\": \"PROD002\",\n      \"quantity\": 1,\n      \"price\": 49.99\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ]
                        },
                        "description": "Creates a new order with the specified customer ID and items."
                    },
                    "response": []
                },
                {
                    "name": "Get Order by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders/:orderId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders",
                                ":orderId"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "00000000-0000-0000-0000-000000000000",
                                    "description": "The unique identifier of the order"
                                }
                            ]
                        },
                        "description": "Retrieves an order by its unique identifier."
                    },
                    "response": []
                },
                {
                    "name": "Get All Orders",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ]
                        },
                        "description": "Retrieves all orders. No filtering applied."
                    },
                    "response": []
                },
                {
                    "name": "Get Orders by Customer ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders?customerId=CUST001",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "customerId",
                                    "value": "CUST001",
                                    "description": "Filter orders by customer ID"
                                }
                            ]
                        },
                        "description": "Retrieves all orders for a specific customer."
                    },
                    "response": []
                },
                {
                    "name": "Get Orders by Status",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders?status=Pending",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "Pending",
                                    "description": "Filter orders by status (Pending, Paid, Completed, Cancelled)"
                                }
                            ]
                        },
                        "description": "Retrieves orders filtered by status."
                    },
                    "response": []
                },
                {
                    "name": "Get Orders with Pagination",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders?skip=0&take=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "skip",
                                    "value": "0",
                                    "description": "Number of records to skip"
                                },
                                {
                                    "key": "take",
                                    "value": "10",
                                    "description": "Number of records to take"
                                }
                            ]
                        },
                        "description": "Retrieves orders with pagination support."
                    },
                    "response": []
                },
                {
                    "name": "Get Orders with Combined Filters",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/orders?customerId=CUST001&status=Paid&skip=0&take=5",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "customerId",
                                    "value": "CUST001"
                                },
                                {
                                    "key": "status",
                                    "value": "Paid"
                                },
                                {
                                    "key": "skip",
                                    "value": "0"
                                },
                                {
                                    "key": "take",
                                    "value": "5"
                                }
                            ]
                        },
                        "description": "Retrieves orders with multiple filters combined (customer, status, and pagination)."
                    },
                    "response": []
                },
                {
                    "name": "Cancel Order",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"reason\": \"Customer requested cancellation\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/orders/:orderId/cancel",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders",
                                ":orderId",
                                "cancel"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "00000000-0000-0000-0000-000000000000",
                                    "description": "The unique identifier of the order to cancel"
                                }
                            ]
                        },
                        "description": "Cancels an order. The reason is optional."
                    },
                    "response": []
                },
                {
                    "name": "Cancel Order (No Reason)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/orders/:orderId/cancel",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders",
                                ":orderId",
                                "cancel"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "00000000-0000-0000-0000-000000000000"
                                }
                            ]
                        },
                        "description": "Cancels an order without providing a reason."
                    },
                    "response": []
                }
            ],
            "description": "Endpoints for managing orders"
